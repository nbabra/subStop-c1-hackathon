{
  "name": "subStop",
  "version": "0.1",
  "description":
    "A Chrome extension designed in order to help users save money by tracking which subscription services they are not using.",
  "icons": {
    "16": "icon48.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },


  "manifest_version": 2,

  "browser_action": {
    "default_icon": {
      "16": "icon48.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab", 
    "tabs",
    "webRequest",
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-3.3.1.min.js", "background.js"]
    }
  ]
}